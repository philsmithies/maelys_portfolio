{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/filteredPosts.tsx",
    "components/Navbar.tsx",
    "components/HomePageGrid.jsx",
    "pages/index.tsx",
    "pages/api/contact.js"
  ],
  "exclude": ["node_modules"]
}
